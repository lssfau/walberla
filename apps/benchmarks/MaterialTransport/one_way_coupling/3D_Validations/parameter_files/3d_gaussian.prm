Simulation{
    simName 3D_validation;  // 3D_validation or 3D_resolution
}

NumericalSetup
{

    xSize   2;           // SI and LBM length are one and the same => dx_SI = dx_LB always
    ySize   2;
    zSize   2;

    numXBlocks 1;
    numYBlocks 1;
    numZBlocks 1;

    tSI 100;           // simulation run time in seconds

    periodicInX true;  // in 2d_gaussian benchmark, all boundaries are periodic
    periodicInY true;
    periodicInZ true;

    sendDirectlyFromGPU false; // use GPU-GPU communication
    useCommunicationHiding false;
    frameWidth <1, 1, 1>; // width of the outer region if splitting the LBM/PSM into inner and outer (only used if useCommunicationHiding is true)


    dx_SI 0.02;

    // fluid quantities
    uInflowL 1e-8;  // LBM velocity of fluid
    kappa_SI 4; // diffusivity SI
    kappa_L  0.00000166; // diffusivity lbm
}

Output
{
    vtkSpacing 1;
    vtkFolder vtk_out;
    performanceLogFrequency 0;
}
